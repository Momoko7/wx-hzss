<!--pages/user/myorder/myorder.wxml-->
<import src="/zanui/tab/index.wxml" />
<template is="zan-tab" data="{{ ...tab}}"></template>
<!--全部-->
<view wx:if="{{tab.selectedId == 0}}">
    <block wx:for="abc" wx:key="key">
        <view>
            <navigator url="../../index/course/course" style="display: block">
                <view class="zan-card">
                    <!-- 卡片左侧商品图片 -->
                    <view class="zan-card__thumb">
                        <image class="zan-card__img"
                               src="/static/img1.jpg"
                               mode="aspectFit"
                        ></image>
                    </view>
                    <!-- 卡片右侧详情描述 -->
                    <view class="zan-card__detail">
                        <!-- 商品标题行 -->
                        <!-- 每行可以使用 zan-card__detail-row 来控制展示区域 -->
                        <!-- 每行里面可以用 zan-card__left-col zan-card__right-col 来控制左右展示 -->
                        <view class="zan-card__detail-row">
                            <view class=" zan-ellipsis--l2">
                                程老师带你走进演讲的知识海洋中
                            </view>
                        </view>
                        <!-- 商品附属信息展示行 -->
                        <view class="zan-card__detail-row zan-c-gray-darker">
                            <view class="zan-card__right-col font-gray">
                                ￥1232
                            </view>
                        </view>
                        <view class="zan-card__detail-row zan-c-gray-darker">
                            <view class="zan-card__right-col font-gray">
                                ×2
                            </view>
                            <view class="zan-card__left-col" style="font-size: 75%;color: #aaaaaa">活动时间：2017-01-01 22:30</view>
                        </view>
                        <!-- 商品操作按钮相关 -->
                        <view class="zan-card__detail-row zan-c-gray-darker">
                            <view class="status">待付款</view>
                            <view class="zan-card__left-col zan-c-red zan-font-bold">合计￥200.00</view>
                        </view>
                    </view>
                </view>
            </navigator>
        </view>
        <view>
            <view class="btn-box">
                <view class="btn btn-red">继续支付</view>
                <view class="btn btn-gray">取消订单</view>
            </view>
        </view>
    </block>
</view>
